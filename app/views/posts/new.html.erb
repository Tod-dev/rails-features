<h1> Add Post</h1>
<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |m| %>
        <p style="color: red"><%= m %></p>
    <%end%>    
<%end%>
<%= form_for :post, url: posts_path do |f| %>    
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class => 'red'}) %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area  :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>